{
  "name": "babel-webpack-package-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for building an npm package using webpack, with next-gen javascript transpilation through babel",
  "bin": {
    "babel-webpack-package-boilerplate": "./bin/main.js"
  },
  "main": "dist/index.js",
  "files": [
    "bin",
    "build",
    "src",
    "test",
    ".babelrc",
    "webpack.config.js"
  ],
  "directories": {
    "lib": "src/lib"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "lint": "eslint ./{src,test}/**/*.js",
    "build": "rimraf build && webpack",
    "prestart": "npm run build",
    "pretest": "npm run prebuild",
    "test": "mocha test/index.js --require babel-register",
    "watch": "npm-watch"
  },
  "watch": {
    "test": "build/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resisttheurge/babel-webpack-package-boilerplate.git"
  },
  "keywords": [
    "babel",
    "es2015",
    "webpack",
    "mocha",
    "npm",
    "build",
    "publishing",
    "boilerplate"
  ],
  "authors": [
    "Peter Zastoupil <peterzastoupil@gmail.com>",
    "Bohdan Kostko <bohdan.kostko@gmail.com>"
  ],
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "mocha-jsdom": "^1.1.0",
    "nock": "^9.0.2",
    "rimraf": "^2.5.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.12"
  },
  "dependencies": {
    "lodash": "^4.17.2",
    "popsicle": "^9.0.0",
    "zen-observable": "^0.4.0"
  }
}
